import 'dart:convert';
import 'package:http/http.dart' as http;
import 'storage_service.dart';

class ApiConfig {
  // ðŸ‘‡ AJUSTA a tu URL real (puede ser https://localhost:7245/api o similar)
  static const String baseUrl = "https://localhost:7245/api";
}

class ApiService {
  Future<Map<String, String>> _headers() async {
    final token = await StorageService.getToken();
    return {
      "Content-Type": "application/json",
      if (token != null) "Authorization": "Bearer $token",
    };
  }

  Future<http.Response> get(String path) async {
    return http.get(Uri.parse("${ApiConfig.baseUrl}$path"), headers: await _headers());
  }

  Future<http.Response> post(String path, Map<String, dynamic> body) async {
    return http.post(Uri.parse("${ApiConfig.baseUrl}$path"),
        headers: await _headers(), body: jsonEncode(body));
  }

  Future<http.Response> put(String path, Map<String, dynamic> body) async {
    return http.put(Uri.parse("${ApiConfig.baseUrl}$path"),
        headers: await _headers(), body: jsonEncode(body));
  }

  Future<http.Response> delete(String path) async {
    return http.delete(Uri.parse("${ApiConfig.baseUrl}$path"), headers: await _headers());
  }
}
